#--- VARIABLES -------------------------------------------------------------------------------

    CLASS_ROOT = ../../../../../../..

  JAVA_PACKAGE = com/sony/scea/pipeline/plugin/ProjectSetterUpper/v1_1_0
  JAVA_SOURCES = $(shell find $(CLASS_ROOT)/../src/$(JAVA_PACKAGE) -type f -name "*.java")

        TARGET = ProjectSetterUpper.jar




#--- RULES -----------------------------------------------------------------------------------

install: $(TARGET)
	(cd $(CLASS_ROOT); \
         $(PLPLUGIN) @PLPLUGIN_EXTERNAL@ --install $(JAVA_PACKAGE)/$(TARGET))

all: $(TARGET)

$(TARGET): java-all
	(cd $(CLASS_ROOT); \
         $(JAR) -cvf $(JAVA_PACKAGE)/$(TARGET) \
                `find $(JAVA_PACKAGE) -type f -name "*.class"`)

java-all: $(JAVA_SOURCES)
	$(JAVAC) $(JAVAC_OPTS) -classpath $(API_JAR):. -d $(CLASS_ROOT) \
          $(JAVA_SOURCES)


clean:
	find . -type f -name "*.class" -exec rm -f {} \; -print
	rm -f $(TARGET)
