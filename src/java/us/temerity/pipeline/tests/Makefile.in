clean: clean-jar clean-class clean-data clean-headers

clean-jar:
	rm -f $(TARGET)

clean-class:
	rm -f *.class
	rm -f java-all

clean-data:
	-chmod -fR 777 data
	rm -rf data

clean-headers:
	rm -f $(HEADERS)


