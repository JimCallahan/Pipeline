clean: clean-jar clean-vault clean-class clean-aux clean-parser clean-textures clean-fonts
	$(MAKE) -C native $@
	$(MAKE) -C plugin $@
	$(MAKE) -C tests $@

clean-jar:
	rm -f $(API_JAR) $(ALL_JAR)

clean-vault: 
	rm -f $(VAULT) BootStrapFields 

clean-class:
	rm -f *.class 
	rm -f bootstrap/*.class
	rm -f glue/*.class
	rm -f laf/*.class
	rm -f message/*.class
	rm -f core/*.class
	rm -f ui/*.class
	rm -f ui/prefs/*.class
	rm -f java-all bootstrap-all

clean-aux:
	rm -f PackageInfo.cc
	rm -f bootstrap/BootStrapLoader.java
	rm -f core/ParseException.java core/SimpleCharStream.java 
	rm -f core/Token.java core/TokenMgrError.java
	rm -f core/PackageInfo.java
	rm -f ui/JUserPrefsDialog.java ui/UserPrefs.java

clean-parser: clean-core-parser 

clean-core-parser: 
	@list='$(CORE_PARSERS)'; \
         for p in $$list; \
         do \
          f=core/$$p".java"; \
	  if test -f $$f; then \
            echo rm -f $$f; \
            rm -f $$f; \
          fi; \
          f=core/$$p"Constants.java"; \
	  if test -f $$f; then \
            echo rm -f $$f; \
            rm -f $$f; \
          fi; \
          f=core/$$p"TokenManager.java"; \
	  if test -f $$f; then \
            echo rm -f $$f; \
            rm -f $$f; \
          fi; \
         done	

clean-textures:
	rm -rf laf/textures

clean-fonts:
	rm -rf laf/fonts


clean-web-icons:
	rm -rf $(top_srcdir)/docs/images/node-icons


