#   V A R I A B L E S                                                                        #
#--------------------------------------------------------------------------------------------#

         ALL_JAR = all.jar
         API_JAR = api.jar
           VAULT = vault


      JAVA_PATHS = -d ../../.. -classpath "../../..:$(srcdir)/../../.."


           ENUMS = LinkState \
                   ExecutionMethod \
                   FileState \
                   LinkPolicy \
                   LinkRelationship \
                   OverallNodeState \
                   OverallQueueState \
                   OverflowPolicy \
                   PropertyState \
                   QueueState \
                   VersionState \
                   PosixSignal \
                   message/FileRequest \
                   message/MasterRequest \
                   ui/SelectionMode \
                   toolset/MergePolicy


    ENUM_SOURCES = $(patsubst %,$(srcdir)/%.java,$(ENUMS))


     API_SOURCES = $(shell ls $(srcdir)/*.java)

    GLUE_SOURCES = $(shell ls $(srcdir)/glue/*.java) 

     LAF_SOURCES = $(shell ls $(srcdir)/laf/*.java) 

    CORE_SOURCES = $(shell ls $(srcdir)/core/*.java) 

     MSG_SOURCES = $(shell ls $(srcdir)/message/*.java)

      TS_SOURCES = $(shell ls $(srcdir)/toolset/*.java)

      UI_SOURCES = $(shell ls $(srcdir)/ui/*.java) 


     ALL_SOURCES = $(API_SOURCES) $(GLUE_SOURCES) $(LAF_SOURCES) \
                   $(CORE_SOURCES) $(MSG_SOURCES) $(TS_SOURCES) $(UI_SOURCES)


    CORE_PARSERS = ToolsetEnvParser \
                   FileMgrOptsParser \
                   JobMgrOptsParser \
                   GraphicalOptsParser \
                   MasterOptsParser \
                   QueueMgrOptsParser \
                   NotifyOptsParser \
                   GlueParser


    JAVA_SOURCES = $(ENUM_SOURCES) $(filter-out $(ENUM_SOURCES),$(ALL_SOURCES)) \
                   $(patsubst %,core/%.java,$(CORE_PARSERS)) \
                   PackageInfo.java ui/UserPrefs.java ui/JUserPrefsDialog.java

      BS_SOURCES = $(shell ls $(srcdir)/bootstrap/*.java) \
                   bootstrap/BootStrapLoader.java

          LOCKED = $(shell ls core/*.class) \
                   $(shell ls ui/*.class)



