<synth>
  <style id="default">
    <opaque value="true"/>
    <state>
      <color value="#ffffff" type="FOREGROUND"/>
      <color value="#7f7f7f" type="BACKGROUND"/>
    </state>
    <font name="Lucida Sans Bold" size="12"/>
  </style>
  <bind style="default" type="region" key=".*"/>

  <style id="splitpane">
    <imagePainter path="BorderIn.png" 
                  sourceInsets="6 6 6 6"
                  paintCenter="true"/>
    <insets top="6" bottom="6" right="6" left="6"/>
  </style>
  <bind style="splitpane" type="region" key="SplitPane"/>

  <style id="splitpanevbar">
    <imagePainter path="VBar.png"
                  direction="vertical"
                  sourceInsets="4 4 4 4" 
		  paintCenter="true"/>
    <insets top="4" bottom="4" right="4" left="4"/>
  </style>
  <bind style="splitpanevbar" type="region" key="SplitPaneDivider"/>

  <style id="splitpanehbar">
    <imagePainter path="HBar.png"
                  direction="horizontal"
                  sourceInsets="4 4 4 4" 
		  paintCenter="true"/>
    <insets top="4" bottom="4" right="4" left="4"/>
  </style>
  <bind style="splitpanehbar" type="region" key="SplitPaneDivider"/>

  <style id="splitpaneleftbutton">
    <imagePainter path="VBarLeftButton.png"
                  direction="vertical"
                  sourceInsets="2 2 2 2" 
		  paintCenter="true"/>
    <insets top="2" bottom="2" right="2" left="2"/>
  </style>
  <bind style="splitpaneleftbutton" type="name" key="SplitPaneDivider.leftOneTouchButton"/>

  <style id="splitpanerightbutton">
    <imagePainter path="VBarRightButton.png"
                  direction="vertical"
                  sourceInsets="2 2 2 2" 
		  paintCenter="true"/>
    <insets top="2" bottom="2" right="2" left="2"/>
  </style>
  <bind style="splitpanerightbutton" type="name" key="SplitPaneDivider.rightOneTouchButton"/>

  <style id="splitpaneupbutton">
    <imagePainter path="HBarUpButton.png"
                  direction="horizontal"
                  sourceInsets="2 2 2 2" 
		  paintCenter="true"/>
    <insets top="2" bottom="2" right="2" left="2"/>
  </style>
  <bind style="splitpaneupbutton" type="name" key="SplitPaneDivider.leftOneTouchButton"/>

  <style id="splitpanedownbutton">
    <imagePainter path="HBarDownButton.png"
                  direction="horizontal"
                  sourceInsets="2 2 2 2" 
		  paintCenter="true"/>
    <insets top="2" bottom="2" right="2" left="2"/>
  </style>
  <bind style="splitpanedownbutton" type="name" key="SplitPaneDivider.rightOneTouchButton"/>

</synth>
