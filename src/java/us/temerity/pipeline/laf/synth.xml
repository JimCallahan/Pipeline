<synth>
  <style id="Default">
    <state>
      <color value="#ffffff" type="FOREGROUND"/>
      <color value="#7f7f7f" type="BACKGROUND"/>
    </state>
    <font name="Lucida Sans Bold" size="12"/>
  </style>
  <bind style="Default" type="region" key=".*"/>



  <!--  R O O T   P A N E L  -->

  <style id="RootPanel">
    <imagePainter path="BorderIn.png" 
                  sourceInsets="7 7 7 7"/>
    <insets top="7" bottom="7" right="7" left="7"/>
  </style>
  <bind style="RootPanel" type="name" key="RootPanel"/>


  <!--  P A N E L   B A R  -->

  <style id="PanelBar">
      <imagePainter path="Panel.png"
                    sourceInsets="5 5 5 5"
                    paintCenter="false"/>
      <insets top="5" bottom="5" right="5" left="5"/>
  </style>
  <bind style="PanelBar" type="name" key="PanelBar"/>


  <!--  P A N E L   M E N U   B U T T O N  --> 

  <style id="PanelMenuButton"> 
    <state>
      <imagePainter path="PanelMenuButton.png"
                    sourceInsets="0 0 0 0"/>
      <insets top="0" bottom="0" right="0" left="0"/> 
    </state>
    <state value="PRESSED">
      <imagePainter path="PanelMenuButtonPressed.png"
                    sourceInsets="0 0 0 0"/>
      <insets top="0" bottom="0" right="0" left="0"/> 
    </state>
  </style>
  <bind style="PanelMenuButton" type="name" key="PanelMenuButton"/>


  <!--  C L O S E   B U T T O N  -->

  <style id="CloseButton"> 
    <state>
      <imagePainter path="CloseButton.png"
                    sourceInsets="0 0 0 0"/>
      <insets top="0" bottom="0" right="0" left="0"/> 
    </state>
    <state value="PRESSED">
      <imagePainter path="CloseButtonPressed.png"
                    sourceInsets="0 0 0 0"/>
      <insets top="0" bottom="0" right="0" left="0"/> 
    </state>
  </style>
  <bind style="CloseButton" type="name" key="CloseButton"/>


  <!--  C O M B O   B O X  -->

  <style id="ComboBox">
      <imagePainter path="ValueBox.png"
                    sourceInsets="1 2 1 2"/>
      <insets top="1" bottom="1" right="2" left="2"/>
  </style>
  <bind style="ComboBox" type="region" key="ComboBox"/>

  <style id="ComboBoxArrowButton">
    <imagePainter path="ComboBoxArrowButton.png"
                  sourceInsets="0 0 0 0"/>
    <insets top="0" bottom="0" right="0" left="0"/> 
  </style>
  <bind style="ComboBoxArrowButton" type="name" key="ComboBox.arrowButton"/>

  <style id="ComboBoxScrollPane">
    <imagePainter path="Panel.png"
                  sourceInsets="5 5 5 5"
                  paintCenter="false"/>
    <insets top="5" bottom="5" right="5" left="5"/>
    <property key="ScrollPane.viewportBorderInsets" type="insets" value="5 5 5 5"/>
  </style>
  <bind style="ComboBoxScrollPane" type="name" key="ComboBox.scrollPane"/>

   
  <!--  S C R O L L   B A R  -->

  <style id="ScrollBar">
    <imagePainter path="Panel.png"
                  sourceInsets="5 5 5 5"
                  paintCenter="false"/>
    <insets top="5" bottom="5" right="5" left="5"/>
  </style>
  <bind style="ScrollBar" type="region" key="ScrollBar"/>

  <style id="ScrollBarThumb">
    <state>
      <imagePainter path="ScrollBarThumb.png"
                    sourceInsets="10 6 10 6"/>
      <insets top="10" bottom="10" right="6" left="6"/> 
    </state>
    <state value="PRESSED">
      <imagePainter path="ScrollBarThumbPressed.png"
                    sourceInsets="10 6 10 6"/>
      <insets top="10" bottom="10" right="6" left="6"/>
    </state>
  </style>
  <bind style="ScrollBarThumb" type="region" key="ScrollBarThumb"/>

  <style id="ScrollBarTrack"> 
    <imagePainter path="ScrollBarTrack.png"
                  sourceInsets="10 6 10 6"/>
    <insets top="10" bottom="10" right="6" left="6"/>
  </style>
  <bind style="ScrollBarTrack" type="region" key="ScrollBarTrack"/>
   
  <style id="ScrollBarArrowNorth"> 
    <imagePainter path="ScrollArrowNorth.png"
                  method="arrowButtonForeground"
                  direction="north"
                  sourceInsets="0 0 0 0"/>
    <insets top="0" bottom="0" right="0" left="0"/>
  </style>
  <bind style="ScrollBarArrowNorth" type="name" key="ScrollBar.button"/>

  <style id="ScrollBarArrowSouth"> 
    <imagePainter path="ScrollArrowSouth.png"
                  method="arrowButtonForeground"
                  direction="south"
                  sourceInsets="0 0 0 0"/>
    <insets top="0" bottom="0" right="0" left="0"/>
  </style>
  <bind style="ScrollBarArrowSouth" type="name" key="ScrollBar.button"/>


  <!--  M E N U S  -->

  <style id="Menu">
    <imageIcon id="MenuIcon" path="MenuIcon.png"/>
    <property key="Menu.arrowIcon" value="MenuIcon"/>
    <state>
      <imagePainter path="MenuItem.png"
                    sourceInsets="4 8 4 0"/>
      <insets top="4" bottom="4" right="0" left="8"/>
    </state>
    <state value="SELECTED">
      <imagePainter path="MenuItemSelected.png"
                    sourceInsets="4 8 4 0"/>
      <insets top="4" bottom="4" right="0" left="8"/>
    </state>
  </style>
  <bind style="Menu" type="region" key="Menu"/>

  <style id="MenuItem">
    <state>
      <imagePainter path="MenuItem.png"
                    sourceInsets="4 8 4 0"/>
      <insets top="4" bottom="4" right="0" left="8"/>
    </state>
    <state value="MOUSE_OVER">
      <imagePainter path="MenuItemSelected.png"
                    sourceInsets="4 8 4 0"/>
      <insets top="4" bottom="4" right="0" left="8"/>
    </state>
  </style>
  <bind style="MenuItem" type="region" key="MenuItem"/>

  <style id="PopupMenu">
    <opaque value="false"/>
    <imagePainter path="Panel.png"
                  sourceInsets="5 5 5 5"/>
    <insets top="5" bottom="5" right="5" left="5"/>
  </style>
  <bind style="PopupMenu" type="region" key="PopupMenu"/>

  <style id="PopupMenuSeparator">
    <imagePainter path="Separator.png"
                  sourceInsets="2 4 2 4"/>
    <insets top="2" bottom="2" right="4" left="4"/>
  </style>
  <bind style="PopupMenuSeparator" type="region" key="PopupMenuSeparator"/>


  <!--  S P L I T   P A N E  -->

  <style id="SplitPaneHorizontalDivider">
    <imagePainter path="SplitPaneHorizontalDivider.png"
                  method="splitPaneDividerForeground"
                  direction="horizontal_split"
                  sourceInsets="4 4 4 4"/>
    <insets top="4" bottom="4" right="4" left="4"/>
  </style>
  <bind style="SplitPaneHorizontalDivider" type="region" key="SplitPaneDivider"/>

  <style id="SplitPaneHorizontalDividerLeftButton">
    <state>
      <imagePainter path="SplitPaneHorizontalDividerLeftButton.png"
                    sourceInsets="2 2 2 2"/>
    </state>
    <state value="PRESSED">
      <imagePainter path="SplitPaneHorizontalDividerLeftButtonPressed.png"
                    sourceInsets="2 2 2 2"/>
    </state>
    <insets top="2" bottom="2" right="2" left="2"/>
  </style>
  <bind style="SplitPaneHorizontalDividerLeftButton" type="name" 
        key="SplitPaneHorizontalDivider.leftOneTouchButton"/>

  <style id="SplitPaneHorizontalDividerRightButton">
    <state>
      <imagePainter path="SplitPaneHorizontalDividerRightButton.png"
                    sourceInsets="2 2 2 2"/>
    </state>
    <state value="PRESSED">
      <imagePainter path="SplitPaneHorizontalDividerRightButtonPressed.png"
                    sourceInsets="2 2 2 2"/>
    </state>
    <insets top="2" bottom="2" right="2" left="2"/>
  </style>
  <bind style="SplitPaneHorizontalDividerRightButton" type="name" 
        key="SplitPaneHorizontalDivider.rightOneTouchButton"/>


  <style id="SplitPaneVerticalDivider">
    <imagePainter path="SplitPaneVerticalDivider.png"
                  method="splitPaneDividerForeground"
                  direction="vertical_split"
                  sourceInsets="4 4 4 4"/>
    <insets top="4" bottom="4" right="4" left="4"/>
  </style>
  <bind style="SplitPaneVerticalDivider" type="region" key="SplitPaneDivider"/>

  <style id="SplitPaneVerticalDividerUpButton">
    <state>
      <imagePainter path="SplitPaneVerticalDividerUpButton.png"
                    sourceInsets="2 2 2 2"/> 
    </state>
    <state value="PRESSED">
      <imagePainter path="SplitPaneVerticalDividerUpButtonPressed.png"
                    sourceInsets="2 2 2 2"/>
    </state>
    <insets top="2" bottom="2" right="2" left="2"/>
  </style>
  <bind style="SplitPaneVerticalDividerUpButton" type="name" 
        key="SplitPaneVerticalDivider.upOneTouchButton"/>

  <style id="SplitPaneVerticalDividerDownButton">
    <state>
      <imagePainter path="SplitPaneVerticalDividerDownButton.png"
                    sourceInsets="2 2 2 2"/>
    </state>
    <state value="PRESSED">
      <imagePainter path="SplitPaneVerticalDividerDownButtonPressed.png"
                    sourceInsets="2 2 2 2"/>
    </state>
    <insets top="2" bottom="2" right="2" left="2"/>
  </style>
  <bind style="SplitPaneVerticalDividerDownButton" type="name" 
        key="SplitPaneVerticalDivider.downOneTouchButton"/>


</synth>
